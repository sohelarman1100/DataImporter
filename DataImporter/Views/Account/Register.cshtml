
@model DataImporter.Models.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles
{
    <link href="~/css/lginRgsterStyl.css" rel="stylesheet" />
}
<h1 style="margin:0% 5% 0%">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 customStyl">
        <form asp-controller="Account" asp-action="Register" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @*next div which is used for token it is a part of reCaptcha settings*@
            <div class="form-group">
                <label asp-for="Token">Please write a message</label>
                <input asp-for="Token" class="form-control" />
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    @*following part is for reCaptcha*@
    <script src="https://www.google.com/recaptcha/api.js?render=6LcUf1wcAAAAAPrU2htXK6yoUSaxe_aWZfn64m8E"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6LcUf1wcAAAAAPrU2htXK6yoUSaxe_aWZfn64m8E', { action: 'captcha' }).then(function (token) {
                console.log(token);
                $('#Token').val(token);
            });
        });
    </script>
}
