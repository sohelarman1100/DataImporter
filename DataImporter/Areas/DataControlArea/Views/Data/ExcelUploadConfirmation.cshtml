@model ExcelManageModel
@{
    ViewData["Title"] = "ExcelUploadConfirmation";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Are You Sure You Want To Upload The Following File ??</h3>
                    </div>
                    @*@if (Model.count == 1)
                    {
                        <div class="card-header">
                            <h3 class="card-title">sorry can't upload the file!!! file already exixt </h3>
                        </div>
