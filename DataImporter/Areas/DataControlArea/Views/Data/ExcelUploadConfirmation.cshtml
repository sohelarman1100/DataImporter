                    @*<input type="hidden" asp-for="GroupId" />*@
                    <div>
                        <table class="table table-bordered border-primary table">
                            <thead>
                                @for (var i = 0; i < 1; i++)
                                {
                                    <tr class="table-warning">
                                        @for (var j = 0; j < Model.ExcelData[i].Count; j++)
                                        {
                                            <td style="font-weight:500">
                                                @Model.ExcelData[i][j]
                                            </td>
                                        }
                                    </tr>
                                }
                            </thead>
                            <tbody>
                                @for (var i = 1; i < Model.ExcelData.Count; i++)
                                {
                                    <tr>
                                        @for (var j = 0; j < Model.ExcelData[i].Count; j++)
                                        {
                                            <td>
                                                @Model.ExcelData[i][j]
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <form method="post">
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">YES</button>
                            <a asp-action="ExcelDelete" asp-controller="Data"
                               class="btn btn-default float-right">NO</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>


